<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ListView
        android:id="@+id/xander_panel_sheet_list"
        android:layout_marginBottom="3dp"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xander_panel_sheet_cancel"
        android:layout_width="match_parent"
        android:layout_marginTop="3dp"
        android:layout_height="@dimen/panel_list_item_height"
        android:text="Cancel"
        android:gravity="center"
        android:background="@drawable/sheet_cancel"
        android:textColor="@color/sheet_cancel_text" />

</LinearLayout>